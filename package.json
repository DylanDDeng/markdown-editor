{
  "name": "emergence",
  "version": "0.1.0",
  "productName": "涌现 Emergence",
  "description": "Emergence — macOS Markdown editor with real-time preview",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run start:electron",
    "start:electron": "electron .",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config vite.config.cjs",
    "dev:electron": "wait-on http://127.0.0.1:5173 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "build": "npm run build:renderer",
    "build:renderer": "vite build --config vite.config.cjs"
  },
  "keywords": [
    "electron",
    "markdown",
    "editor",
    "mac"
  ],
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "katex": "^0.16.9"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}
